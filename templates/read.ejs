<body>
	<div class="limiter">
		<div class="container-login0">
			<div class="wrap-login0 d-flex justify-content-center">
				<form class="login0-form validate-form" method="post">
					<span class="login0-form-title">
						TASKS
					</span>
                    
					<form class="login0-form validate-form w-100" method="post" action="/courses">
                        <% if (tasks) { %>
                            <ol>
                                <% for (let i = 0; i < tasks.length;i++) { %>
                                    <li>
                                        <span class="login0-form-title">
                                            -> <%= tasks[i].description %>
                                        </span>
                                    </li>
                                <% } %>
                            </ol>
                        <% } %>

						<div class="text-center p-t-40">
							<a class="txt2" href="/dashboard">
								<i class="fa fa-long-arrow-left m-r-5" aria-hidden="true"></i>
								GO TO HOME
							</a>
						</div>
                    </form>
				</form>
			</div>
		</div>
	</div>
	
	<script src="../static/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="../static/vendor/bootstrap/js/popper.js"></script>
